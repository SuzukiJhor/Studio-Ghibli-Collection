{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "types": [
      "node",
      "vitest/globals"
    ],
    "isolatedModules": true,
    "module": "ESNext",
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ]
}